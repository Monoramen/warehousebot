[Unit]
Description= Django Admin daemon
Requires=gunicorn.socket
After=network.target vasd.service

[Service]
User=ramen
Group=www-data
WorkingDirectory=/home/ramen/www/warehousebot/backend
ExecStart=/home/ramen/www/warehousebot/env/bin/gunicorn --workers 2 --bind  unix:/home/ramen/www/warehousebot/run/warehousebot.sock  backend.wsgi:application
Restart=on-failure
StartLimitInterval=3
StartLimitBurst=100

[Install]
WantedBy=multi-user.target